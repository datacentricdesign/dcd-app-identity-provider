extends layout

block content

    span(style="color:#CC0000")
        if error
            if error.requirements
                p= error.requirements
            else if error.hint
                p= error.hint
            else if error.message
                p= error.message

    form(action="/auth/signup", method="POST")
        input(type="hidden", name="_csrf", value=csrfToken)
        input(type="hidden", name="challenge", value=challenge)
        div(class="col50")
            fieldset
                h3 Sign up
                p Please type in your email address, name and password to sign up.
                table(style="")
                    tr
                        td
                            | Email:
                        td
                            input(type="email", name="email")
                    tr
                        td
                            | Name:
                        td
                            input(type="text", name="name")
                    tr
                        td
                            | Password:
                        td
                            input(type="password", name="password")
                //label(for="remember") Remember me
                //    input(id="remember", type="checkbox", name="remember", value="1", class="box")
                input(type="submit", value="Sign up", class="btn blue")

                a(href="/auth/signin?login_challenge=" + challenge)
                    | Already an account? Sign in
